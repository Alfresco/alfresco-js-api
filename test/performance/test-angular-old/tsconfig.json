{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "es2015",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceRoot": "../src",
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],

    "lib": [
      "es2017",
      "dom"
    ]
  }
}
